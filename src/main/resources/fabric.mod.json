{
    "schemaVersion": 1,
    "id": "boathud",
    "version": "${version}",

    "name": "BoatHud",
    "description": "This mod adds a HUD that is configured for riding a boat, and is designed for boat racing. This version is modified to include a better compact mode.",
    "authors": [
        "hibii",
        "Sotumney"
    ],
    "contact": {
        "homepage": "https://hibiscus.pet/mods/boathud",
        "sources": "https://github.com/Hibiii/BoatHud",
        "issues": "https://github.com/Hibiii/BoatHud/issues"
    },

    "license": "Unlicense",
    "icon": "assets/boathud/icon.png",

    "environment": "client",
    "entrypoints": {
        "client": [
            "hibi.boathud.Common"
        ],
        "modmenu": [
            "hibi.boathud.MenuInteg"
        ]
    },
    "mixins": [
        "boathud.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.14.22",
        "fabric": "*",
        "minecraft": ">=1.20.2",
        "java": ">=17",
        "cloth-config2": ">=12.0"
    },
    "custom": {
        "modmenu": {
            "links": {
                "modmenu.github_releases": "https://github.com/Sotumney/BoatHudCompact",
                "modmenu.curseforge": "https://www.curseforge.com/minecraft/mc-mods/boathud",
                "modmenu.modrinth": "https://modrinth.com/mod/boathud/"
            }
        }
    }
}